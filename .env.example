# Environment variables for KodBox CalDAV Server
# Copy this file to .env and fill in your values

# KodBox Configuration
KODBOX_BASE_URL=https://your-kodbox-server.com/
KODBOX_USERNAME=
KODBOX_PASSWORD=
KODBOX_TIMEOUT=30

# CalDAV Configuration
CALDAV_USERNAME=kodbox
CALDAV_PASSWORD=calendar123
CALDAV_REALM=KodBox CalDAV Server

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=5082
SERVER_DEBUG=false
SERVER_WORKERS=2

# Data Synchronization
SYNC_INTERVAL=300
SYNC_MAX_RETRIES=3
SYNC_RETRY_DELAY=60
SYNC_CACHE_MAX_AGE=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/kodbox-caldav.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Optional: Monitoring
GRAFANA_PASSWORD=admin123